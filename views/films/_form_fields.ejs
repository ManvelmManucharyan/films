<div>
    <label>Title</label>
    <input type="text" name="title" value="<%=films.title%>">
</div>
<div>
    <label>Director</label>
    <select name="director">
        <% directors.forEach(director => { %> 
            <% if(director.id === films.director) { %> 
                <option selected label="<%=director.name%>" value="<%=director.id%>">
            <% } else {  %>    
            <option label="<%=director.name%>" value="<%=director.id%>">
            <% } %> 
        <% }) %> 
    </select>
</div>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate" value="<%=films.publishDate == null ? '' : films.publishDate.toISOString().split('T')[0]%>">
</div>
<div>
    <label>Duration(miutes)</label>
    <input type="number" name="duration" min="1" value="<%=films.duration%>">
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover" class="filepond">
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%=films.description%> </textarea>
</div>