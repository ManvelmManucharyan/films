<h2>Search Directors</h2>
<form action="/directors" method="GET">
    <label >Name</label>
    <input type="text" name="name" value="<%=searchOption.name%>">
    <button type="submit">Search</button>
    <button type="reset" onclick="location.href='/directors'">Clear</button>
</form>
<br>
<% directors.forEach(director => { %>
    <div><%=director.name%></div>
<% }) %> 